<section>
    {{!-- {{#each post}}
    {{/each}} --}}
    {{!-- {{log 'user' user}} --}}
    {{!-- {{log 'session' session}} --}}
    <section class=" column align-center text-center">
        <article class="border">
    <h2>{{post.title}}</h2>
    {{post.text}}
    <span> by </span>
    {{post.author.username}}
    <p>on:</p>
    {{post.date}}
    </article>
    </section>
    {{#if session}}
    <form action="/post/{{post.id}}?_method=PUT" method="post">
    <input type="text" name="text" placeholder="edit a comment"id="comment" value="{{post.text}}">
        <button type="submit" class="sub">edit post</button>
    </form>
    {{/if}}
    <form action="/createcomment" method="POST">
    <input type="hidden" name="post_id" value="{{post.id}}">
    {{!-- <input type="hidden" name="author_id" value="{{post.author.id}}"> --}}
    <input type="text" name="comment" placeholder="add a comment"id="comment">
        <button type="submit" class="sub">add comment</button>
    </form>
    {{!-- {{log post.comments}} --}}
    {{#each post.comments}}
    <section class="row align-center text-center">
        <article class=" comment align-center">
    {{this.text}}
    {{post.comments.text}}
    <span>by</span>
    {{#if this.user.username}}
    {{this.user.username}}
    {{else}}
    <span>anonymous</span>
    </article>
    </section>
    {{/if}}
    {{/each}}
</section>
